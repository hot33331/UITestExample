<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:WeatherApp.Views;assembly=WeatherApp"
            xmlns:testIds="clr-namespace:TestIds;assembly=TestIds"
            x:Class="WeatherApp.Views.MainPage"
            Title="Weather App">
    
    <TabbedPage.Children>
        <views:LocationPage Title="Location"
                            IconImageSource="Gps"
                            AutomationId="{x:Static testIds:TestIds.LocationTab}" />
        <views:CurrentWeatherPage Title="Now"
                                  IconImageSource="Calendar"
                                  AutomationId="{x:Static testIds:TestIds.CurrentWeatherTab}" />
    </TabbedPage.Children>
</TabbedPage>